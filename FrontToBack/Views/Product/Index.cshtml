@model List<Product>
@{
    ViewData["Title"] = "Index";
}

 <!-- PRODUCTS START -->

        <section id="products">
                 <input type="hidden" id="productCount" value="@ViewBag.ProductCount" /> 

            <div class="container">
                <div class="row pt-5">

            <div class="row" id="productlist">

                @foreach (var item in Model)
                {
                    <div class="col-sm-6 col-md-4 col-lg-3 mt-3">
                        <div class="product-item text-center" data-id="@item.Category.Name.ToLower()">
                            <div class="img">
                                @if (item.Images.Count > 0)
                                {
                                    <a href="">
                                        <img src="~/img/@(item.Images.FirstOrDefault(i=>i.IsMain)!=null?item.Images.FirstOrDefault(i=>i.IsMain).ImageUrl:item.Images.FirstOrDefault().ImageUrl)" class="img-fluid" alt="">
                                    </a>
                                }
                            </div>
                            <div class="title mt-3">
                                <h6>@item.Name </h6>
                            </div>
                            <div class="price">
                                <span class="text-black-50">Add to cart</span>
                                <span class="text-black-50">$@item.Price</span>
                            </div>
                        </div>
                    </div>
                }


            </div>
                    
                </div>
                 <div class="row justify-content-center mb-4">
                   <button class="btn btn-success" id="loadMore"> LoadMore...</button>
                </div>
              

            </div>
        </section>

         
        <!-- PRODUCTS END -->

