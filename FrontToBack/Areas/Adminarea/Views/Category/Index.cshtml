@model List<Category>
        <div class="content-wrapper">
          <div class="row">
            <div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Basic Table</h4>
                  <a class="btn btn-success" asp-area="Adminarea" asp-controller="category" asp-action="create">
                      Add Category
                  </a>
                  <div class="table-responsive">
                    <table class="table">
                      <thead>
                        <tr>
                          <th>Name</th>
                          <th>Desc.</th>
                          <th>Settings</th>
                        
                        </tr>
                      </thead>
                      <tbody>
                               @foreach (var item in Model)
                                {
                                   <tr>
                                       <td>@item.Name</td>
                                      <td>@item.Desc.Substring(0,10)</td>
                                      <td>
                                           <a class="btn btn-primary" asp-area="Adminarea" asp-controller="category" asp-action="update" asp-route-id="@item.Id">
                                                <i class="mdi mdi-console">UPDATE</i>
                                                </a>
                                            <a class="btn btn-danger" asp-area="Adminarea" asp-controller="category" asp-action="delete" asp-route-id="@item.Id">
                                                <i class="mdi mdi-delete">DELETE</i>
                                                </a>
                                            <a class="btn btn-success" asp-area="Adminarea" asp-controller="category" asp-action="detail" asp-route-id="@item.Id">
                                                <i class="mdi mdi-details">DETAILS</i>
                                                </a>
                                      </td>
                                      
                                   </tr>
                                }
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
      
          </div>
        </div>

